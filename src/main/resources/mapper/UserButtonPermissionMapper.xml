<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyao.bulk.mapper.UserButtonPermissionMapper">

    <resultMap id="UserButtonPermissionMap" type="com.liyao.bulk.model.UserButtonPermission">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="btn_id" property="btnId"/>
        <result column="permission_type" property="permissionType"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="selectByUserId" resultMap="UserButtonPermissionMap">
        SELECT id, user_id, btn_id, permission_type, created_at
        FROM user_btn
        WHERE user_id = #{userId}
        ORDER BY id ASC
    </select>

    <insert id="insertBatch">
        INSERT INTO user_btn (user_id, btn_id, permission_type, created_at)
        VALUES
        <foreach collection="items" item="item" separator=",">
            (#{item.userId}, #{item.btnId}, #{item.permissionType}, #{item.createdAt})
        </foreach>
        ON DUPLICATE KEY UPDATE created_at = VALUES(created_at)
    </insert>

    <update id="updateUserId">
        UPDATE user_btn
        SET user_id = #{targetUserId}
        WHERE user_id = #{sourceUserId}
    </update>

    <delete id="deleteByUserId">
        DELETE FROM user_btn
        WHERE user_id = #{userId}
    </delete>

</mapper>
