<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyao.bulk.mapper.PositionScopeMapper">

    <resultMap id="PositionScopeMap" type="com.liyao.bulk.model.PositionScope">
        <id column="id" property="id"/>
        <result column="position_id" property="positionId"/>
        <result column="system_code" property="systemCode"/>
        <result column="system_name" property="systemName"/>
        <result column="scope_code" property="scopeCode"/>
        <result column="scope_name" property="scopeName"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="selectByPositionId" resultMap="PositionScopeMap">
        SELECT id, position_id, system_code, system_name, scope_code, scope_name, created_at
        FROM position_scope
        WHERE position_id = #{positionId}
    </select>

    <select id="selectByPositionIds" resultMap="PositionScopeMap">
        SELECT id, position_id, system_code, system_name, scope_code, scope_name, created_at
        FROM position_scope
        WHERE position_id IN
        <foreach collection="positionIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <insert id="insertBatch">
        INSERT INTO position_scope (position_id, system_code, system_name, scope_code, scope_name, created_at)
        VALUES
        <foreach collection="scopes" item="item" separator=",">
            (#{item.positionId}, #{item.systemCode}, #{item.systemName}, #{item.scopeCode}, #{item.scopeName}, #{item.createdAt})
        </foreach>
    </insert>

    <delete id="deleteByPositionId">
        DELETE FROM position_scope WHERE position_id = #{positionId}
    </delete>
</mapper>
